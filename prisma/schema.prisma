generator client {
  provider        = "prisma-client-js"
  output          = "../generated/prisma"
  previewFeatures = ["typedSql"]
}

datasource db {
  provider = "postgresql"
}

/// sCHEMA BLOCK
model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  jobTitle String
  name  String?
  posts Post[]
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  authorId  Int
  author    User    @relation(fields: [authorId], references: [id])
  status    Status @default(Unknown)
}

enum Status{
  Unknown
  Draft
  InProgress
  InReview
  Published
}
